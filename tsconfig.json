{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,

		"paths": {
			"@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"],
			"@db/*": ["./db/*"],
			"@hooks/*": ["./hooks/*"],
			"@utils/*": ["./utils/*"],
			"@components/*": ["./components/*"],
			"@context/*": ["./context/*"]
		},
		"plugins": [{ "name": "nativewind/typescript-plugin" }]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"scripts/import_habits.js",
		"db/index.ts"
	],
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js",
		".expo",
		"dist",
		"build"
	]
}
